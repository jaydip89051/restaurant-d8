{#
/**
 * @file
 * Default theme implementation for the packages on the packages form.
 *
 * Available variables:
 * - packages: An array of form components for each package.
 *   contains the following:
 *   - label: The package label.
 *   - description: A description of the package.
 *   - settings: A settings link.
 *   - enabled: The checkbox to toggle the package.
 *
 * @ingroup themeable
 */
#}

<table class="responsive-enabled" id="packages-list">
  <thead>
    <tr>
      <th class="checkbox visually-hidden">{{ 'Installed'|t }}</th>
      <th class="package visually-hidden">{{ 'Package'|t }}</th>
      <th class="settings visually-hidden">{{ 'Settings'|t }}</th>
    </tr>
  </thead>
  <tbody>
    {% for package in packages %}
      {% if package.label is defined %}
        <tr>
          <td class="checkbox">
            {{ package.enabled }}
          </td>
          <td class="package table-filter-text-source">
            <h3>{{ package.label }}</h3>
            <p>{{ package.description }}</p>
          </td>
          <td class="settings">
             {{ package.settings }}
          </td>
        </tr>
      {% endif %}
    {% endfor %}
  </tbody>
</table>
